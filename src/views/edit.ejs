<%- include("_header") -%>

<h1 style="margin-bottom: 30px;">Update an Event</h1>

<form action="/visits/edit/<%= model._id %>" method="post">
  <div class="form-horizontal">

    <%- include("_editor") -%>

    <div class="form-group row" style="margin-top: 40px;">
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default" style="background-color: rgb(19, 48, 141) !important; color: white;"/>
        <a class="btn btn-outline-dark" href="/visits/all" style="background-color: gray; color: white;">Cancel</a>
      </div>
    </div>
  </div>
</form>

